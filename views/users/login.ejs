<% layout("/layouts/boilerplate") %>
<body>
    <form class="relative space-y-3 rounded-md bg-white p-6 shadow-xl lg:p-10 border border-gray-100 m-10" method="POST" action="/login"> 
        <h1 class="text-xl font-semibold lg:text-2xl">Login</h1>
        <p class="pb-4 text-gray-500">Login as an existing user</p>

        <div>
          <label class=""> Username </label>
          <input type="text" name="username" id="username" placeholder="Username" class="mt-2 h-12 w-full rounded-md bg-gray-100 px-3 outline-none focus:ring" required/>
        </div>
        <div>
          <label class=""> Password </label>
          <input type="password" name="password" id="password" placeholder="******" class="mt-2 h-12 w-full rounded-md bg-gray-100 px-3 outline-none focus:ring" required/>
        </div>
      
        <div>
          <button class="mt-5 w-full rounded-md bg-blue-600 p-2 text-center font-semibold text-white outline-none focus:ring">Login</button>
        </div>
        <div class="text-center">
          Didn't have an account? <br> <a href="/signup" class="text-blue-600">Sign Up</a>
        </div>
    </form>
    
      
</body>